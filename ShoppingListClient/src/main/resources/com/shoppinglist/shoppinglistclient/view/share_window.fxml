<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.shoppinglist.shoppinglistclient.ControllerShareList"
      stylesheets="@styles/style.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Komu udostępnić?"/>
    <ChoiceBox fx:id="nameBox" />
    <HBox spacing="10">
        <Button fx:id="shareBtn" text="Udostępnij" onAction="#handleShare"/>
        <Button text="Anuluj" onAction="#handleCancel"/>
    </HBox>

</VBox>
