<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="650.0" stylesheets="@styles/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shoppinglist.shoppinglistclient.ControllerEditList">

    <TableView fx:id="productListTable" layoutX="30.0" layoutY="58.0" prefHeight="326.0" prefWidth="486.0">
      <columns>
          <TableColumn fx:id="catCol" prefWidth="75.0" text="Kategoria" />
          <TableColumn fx:id="nameCol" prefWidth="75.0" text="Produkt" />
          <TableColumn fx:id="quantCol" prefWidth="75.0" text="Ilość" />
          <TableColumn fx:id="unitCol" prefWidth="75.0" text="Jednostka" />
      </columns>
    </TableView>

    <Label fx:id="listNameLabel" layoutX="29.0" layoutY="14.0" prefHeight="18.0" prefWidth="390.0" text="Lista" />
    <Label fx:id="usersLabel" layoutX="29.0" layoutY="32.0" text="Właściciele" />

    <Button fx:id="addProductBtn" layoutX="537.0" layoutY="58.0" mnemonicParsing="false" text="Dodaj produkt" onAction="#addProductClicked"/>
    <Button fx:id="editAmountBtn" layoutX="537.0" layoutY="98.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="94.0" text="Zmień ilość" onAction="#editAmountClicked"/>
    <Button fx:id="deleteBtn" layoutX="537.0" layoutY="138.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="94.0" text="Usuń produkt" onAction="#deleteClicked"/>
    <Button fx:id="saveBtn" layoutX="537.0" layoutY="358.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="94.0" text="Zapisz" onAction="#saveClicked"/>
    <Button fx:id="goBackBtn" layoutX="537.0" layoutY="318.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="94.0" text="Powrót" onAction="#goBack"/>

</AnchorPane>
